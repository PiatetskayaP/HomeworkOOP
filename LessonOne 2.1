public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Triangle triangleOne = new Triangle (3.4, 5.7, 9.2);
		triangleOne.area();
		
		Triangle triangleTwo = new Triangle (8, 4, 9);
		triangleTwo.area();
	}

}
